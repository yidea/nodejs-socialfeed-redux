{
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "rules": {
    "curly": [2, "multi-line"],
    "no-throw-literal": 1,
    "strict": "never",
    "semi": [2, "never"],
    "quotes": "single",
    "no-var": 1,
    "eol-last": 1,
    "no-new-require": 1,
    "no-sync": 1,
    "no-mixed-requires": [1, true],
    "no-use-before-define": [1, "nofunc"],
    "no-undef": "variable",
    "comma-dangle": 0,
    "no-debugger": 0,
    "no-underscore-dangle": 0,
    "new-cap": [2, {
      "capIsNewExceptions": ["Schema", "Passport"]
    }]
  }
}
